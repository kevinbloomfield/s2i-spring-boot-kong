{
    "kind": "List",
    "apiVersion": "v1",
    "metadata": {
        "name": "sti-spring-boot-kong"
    },
    "items": [
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "sti-spring-boot-kong"
            },
            "spec": {
                "triggers": [
                    {
                        "type": "GitHub",
                        "github": {
                            "secret": "secret"
                        }
                    },
                    {
                        "type": "Generic",
                        "generic": {
                            "secret": "secret"
                        }
                    },
                    {
                        "type": "ImageChange",
                        "imageChange": {}
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/lucastheisen/s2i-spring-boot-kong.git",
                        "ref": "master"
                    }
                },
                "strategy": {
                    "type": "Docker",
                    "dockerStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "centos:centos7"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "s2i-spring-boot-kong:latest"
                    }
                },
                "resources": {}
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "centos"
            },
            "spec": {
                "dockerImageRepository": "library/centos:7"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "sti-spring-boot-kong"
            },
            "spec": {
                "dockerImageRepository": "",
                "tags": [
                    {
                        "name": "latest",
                        "annotations": {
                            "description": "Spring Boot microservice behind Kong API Gateway STI image",
                            "iconClass": "icon-jboss",
                            "tags": "builder,springboot,java,maven",
                            "supports": "springboot,java:8,maven:3",
                            "version": "1.0"
                        }
                    }
                ]
            }
        }
    ]
}